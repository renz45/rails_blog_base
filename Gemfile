  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
  
end

group :development do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'annotate', :git => 'git://github.com/ctran/annotate_models.git'
  gem 'pry'
  gem 'faker'
end

group :test do
  gem 'rspec'
  gem 'webrat'
  gem 'factory_girl'
end

group :production do
  gem 'pg'
end



