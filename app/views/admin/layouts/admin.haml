!!!5
%html
    %head
        %title= title
        = csrf_meta_tag

        = render "layouts/stylesheets"

        %body
            = render "layouts/header"
            .container
                .post_col
                    %section
                        -flash.each do |key,value|
                            %div{ class: ["flash", key]}= value                         
                        = yield
                .side_col
                    =# render "blog/layouts/sidebar"

        = render "layouts/footer"

        = debug(params) if Rails.env.development?