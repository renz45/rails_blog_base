%h2 Categories

= form_for @category, url: admin_blog_categories_path, remote: true do |f|
  %p
    = f.label :category, "Add Category"
    %br
    = f.text_field :category
    = hidden_field_tag 'page',params[:page]
    = f.submit "Add"

= render "admin/blog/categories/category_list_table", categories: @categories


