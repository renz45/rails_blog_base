%table{class: "info_table"}
  %thead
    %tr
      %th Category
      %th Posts
      %th Created at
  %tbody
    = render "admin/blog/categories/category_list_table_item", categories: categories

  %tfoot
    %tr
      %td{colspan: 3}
        = paginate_for :category do |p|
          %span{class: "right"}
            = p.link_to_last
            = p.link_to_next
          = p.page_out_of_total
          %span{class: "left"}
            = p.link_to_previous
            = p.link_to_first 