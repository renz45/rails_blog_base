%table{class: "info_table"}
  %thead
    %tr
      %th Info
      %th Comment
      %th In&nbsp;Response&nbsp;To
  %tbody
    = render "admin/blog/comments/comment_list_table_item", comments: comments

  %tfoot
    %tr
      %td{colspan: 3}
        = paginate_for :comments do |p|
          %span{class: "right"}
            = p.link_to_last
            = p.link_to_next
          = p.page_out_of_total
          %span{class: "left"}
            = p.link_to_previous
            = p.link_to_first 