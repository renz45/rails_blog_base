%table{class: "info_table"}
  %thead
    %tr
      %th Tag
      %th Posts
      %th Created at
  %tbody
    = render "admin/blog/tags/tag_list_table_item", tags: tags

  %tfoot
    %tr
      %td{colspan: 3}
        = paginate_for :tag do |p|
          %span{class: "right"}
            = p.link_to_last
            = p.link_to_next
          = p.page_out_of_total
          %span{class: "left"}
            = p.link_to_previous
            = p.link_to_first 