.post

  = render "blog/posts/post", post: @post, no_link: true

  = render "blog/posts/comment_form"

  = render "blog/posts/comments", comment_tree: @comment_tree, klass: "comment"
  
  = paginate_for :comments do |p|
    %span{class: "right"}
      = p.link_to_last
      = p.link_to_next
    = p.page_out_of_total
    %span{class: "left"}
      = p.link_to_previous
      =  p.link_to_first 
    